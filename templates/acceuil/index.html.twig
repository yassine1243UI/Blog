{% extends 'base.html.twig' %}

{% block title %}Hello AcceuilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    <ul>
        <table class="table">
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td> <a href="{{ path('app_categorie_show', { 'id': categorie.id }) }}"> CATEGORIE {{ categorie.titre }} </a> </td>
                </tr>
            {% endfor %}
        </table>
    </ul>
    
    {% if is_granted('ROLE_ADMIN') %}
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_categorie_new') }}">Ajouter Catégories</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_article_new') }}">Ajouter Articles</a>
    {% endif %}
</div>
{% endblock %}
